<% content_for :title do %>
    <%= t('.properties_values') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-gg"></i> <%= t('.properties_values') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_products.new_backend_properties_value_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_products.list_backend_properties_values_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_products_properties_values.value'
        },
        {
            text: t('.property'),
            name: 'erp_products_properties.name',
            select: {
                name: 'erp_products_properties.id',
                data_url: erp_products.dataselect_backend_properties_path
            }
        }
    ],
    actions: [
    ],
    filters: [
        {
            text: t('.is_show_website'), name: 'erp_products_properties_values.is_show_website', value: true, checked: false
        }
    ],
    columns: [
        {
            text: t('.property'), name: 'property', value: true, checked: true
        },
        {
            text: t('.value'), name: 'value', value: true, checked: true
        },
        {
            text: t('.product_count'), name: 'product_count', value: true, checked: true
        },
        {
            text: t('.show_filter'), name: 'show_filter', value: true, checked: true
        }
    ],
    sort: { sort_by: 'erp_products_properties_values.property_id', sort_direction: 'desc' }
) %>
