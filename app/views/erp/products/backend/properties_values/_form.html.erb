<%= form_for([erp_products, :backend, properties_value]) do |f| %>
    <%= erp_form_control("text", {
        name: 'properties_value[value]',
        value: properties_value.value,
        label: t('.value'),
        required: true,
        errors: properties_value.errors.full_messages_for(:value)
    }) %>
    <%= erp_form_control("dataselect", {
        name: 'properties_value[property_id]',
        value: properties_value.property_id,
        text: ("#{properties_value.property_group_name} / ") + properties_value.property_name,
        placeholder: t('.choose_property'),
        label: t('.property'),
        url: erp_products.dataselect_backend_properties_path(format: 'json'),
        required: true,
        errors: properties_value.errors.full_messages_for(:property_id)
    }) %>
    <hr>
    <%= erp_component('button/save', { text: t('submit') }) %>
    <%= erp_component('button/cancel', { text: t('cancel'), href: erp_products.backend_properties_path }) %>
<% end %>