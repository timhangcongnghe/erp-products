<% content_for :title do %>Danh Sách Thương Hiệu<% end %>
<% content_for :page_title do %><i class="fa fa-th"></i> Danh Sách Thương Hiệu<% end %>
<% content_for :page_toolbar do %><%= erp_component('button/create', {text: 'Tạo thương hiệu mới', href: erp_products.new_backend_brand_path, class: 'btn-noborder'}) %><% end %>
<%= erp_datalist(
    url: erp_products.list_backend_brands_path,
    keywords: [{text: 'Tên thương hiệu', name: 'erp_products_brands.name'}],
    filters: [{text: 'Hiển thị ngoài website', name: 'erp_products_brands.is_main', value: true, checked: false}],
    columns: [
        {text: 'Logo thương hiệu', name: 'image', value: true, checked: true},
        {text: 'Tên thương hiệu', name: 'name', value: true, checked: true},
        {text: 'Trạng thái', name: 'status', value: true, checked: true},
        {text: 'Người tạo', name: 'creator', value: true, checked: false},
        {text: 'Ngày tạo', name: 'created_at', value: true, checked: false}
    ],
    sort: {sort_by: 'erp_products_brands.created_at', sort_direction: 'desc'}
) %>