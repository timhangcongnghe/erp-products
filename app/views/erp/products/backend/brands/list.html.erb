<table class="table table-advance table-hover table-striped table-checkable order-column">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("image") %>
                <th width='15%'><%= t('image') %></th>
            <% end %>
            <% if get_columns(params).include?("name") %>
                <th class="sortable" sort-by='erp_products_brands.name'>
                    <%= t('.name') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("status") %>
                <th><%= t('status') %></th>
            <% end %>
            <% if get_columns(params).include?("creator") %>
                <th><%= t('creator') %></th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th class="sortable" sort-by='erp_products_brands.created_at'>
                    <%= t('created_at') %>
                </th>
            <% end %>
            <th width="7%"><%= t('actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% @brands.each do |brand| %>
            <tr class="odd gradeX">
                <td>
                    <%= erp_datalist_check_row(id: brand.id) %>
                </td>
                <% if get_columns(params).include?("image") %>
                    <td>
                        <% if !brand.image_url.nil? %>
                            <img class="image-datalist" src="<%= brand.image_url.system_logo %>">
                        <% else %>
                            <img class="image-datalist" src="/backend/img/image-coming-soon.jpg">
                        <% end %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("name") %>
                    <td>
                        <% if can? :create, brand %>
                            <%= link_to brand.name, erp_products.edit_backend_brand_path(brand), class: 'title' %>
                        <% else %>
                            <span class="title"><%= brand.name %></span>
                        <% end %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("status") %>
                    <td>
                        <% if brand.archived == true %>
                            <span class="label label-sm label-danger"><%= t('.archived') %></span>
                        <% else %>
                            <span class="label label-sm label-success"><%= t('active') %></span>
                        <% end %>
                        <% if brand.is_main.present? %>
                            <br><span class="label label-sm label-orange">Hiển thị ngoài website</span>
                        <% end %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("creator") %>
                    <td>
                        <%= erp_component('avatar', {
                            user: brand.creator
                        }) %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                    <td><%= brand.created_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                <td class="text-right">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="javascript:;" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                            <i class="fa fa-cog"></i><%= t('core.options') %><i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <%= link_to '<i class="fa fa-edit"></i>'.html_safe + t('.edit'), 
                                    erp_products.edit_backend_brand_path(brand) %>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <%= link_to '<i class="fa fa-trash"></i>'.html_safe + t('.delete'), 
                                    erp_products.backend_brand_path(brand), method: 'DELETE', data: {confirm: t('delete_confirm')}, class: 'ajax-link' %>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<% if @brands.empty? %>
    <div class="datalist-empty-line"><%= t('.no_matching_records_found') %></div>
<% end %>
        
<%= erp_datalist_pagination(@brands) %>