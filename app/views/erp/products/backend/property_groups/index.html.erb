<% content_for :title do %>Danh Sách Nhóm Thuộc Tính<% end %>
<% content_for :page_title do %><i class="fa fa-gg"></i> Danh Sách Nhóm Thuộc Tính<% end %>
<% content_for :page_toolbar do %><%= erp_component('button/create', {text: 'Tạo nhóm thuộc tính mới', href: erp_products.new_backend_property_group_path, class: 'btn-noborder'}) %><% end %>
<%= erp_datalist(
    url: erp_products.list_backend_property_groups_path,
    keywords: [{text: 'Tên nhóm', name: 'erp_products_property_groups.name'}],
    columns: [
        {text: 'Tên nhóm', name: 'name', value: true, checked: true},
        {text: 'Tên hiển thị', name: 'show_name', value: true, checked: true},
        {text: 'Người tạo', name: 'creator', value: true, checked: false},
        {text: 'Ngày tạo', name: 'created_at', value: true, checked: false}
    ],
    sort: {sort_by: 'erp_products_property_groups.created_at', sort_direction: 'desc'}
) %>