<%= form_for([erp_products, :backend, accessory], html: {multipart: true}) do |f| %>
    <div class="form-body">        
        <div class="row">
            <div class="col-md-6">
                <div class="portlet light bordered">
                    <div class="portlet-body form">
                        <%= erp_form_control('text', {
                            name: 'accessory[name]',
                            value: accessory.name,                   
                            label: 'Tên nhóm phụ kiện',
                            placeholder: 'Nhập tên nhóm phụ kiện...',
                            required: true,
                            errors: accessory.errors.full_messages_for(:name)
                        }) %>
                        <%= erp_form_control('textarea', {
                            name: 'accessory[description]',
                            value: accessory.description,                   
                            label: 'Mô tả nhóm',
                            placeholder: 'Nhập mô tả nhóm...'
                        }) %>
                    </div>
                </div>
            </div>
        </div>
       <div class="portlet light bordered">
            <%= erp_form_control('addableform', {
                type: 'table',
                add_button: 'Thêm',
                partial: 'erp/products/backend/accessory_details/accessory_detail_line_form',
                partial_url: erp_products.accessory_detail_line_form_backend_accessory_details_path,
                items: @accessory.accessory_details,
                item: :accessory_detail,
                add_control_selector: "input[name='product_id']",
                add_control: erp_form_control('dataselect', {name: 'product_id', label: 'Sản phẩm', placeholder: 'Chọn sản phẩm phù hợp...', url: erp_products.dataselect_backend_products_path(format: 'json')}),
                thead: "<th class='text-left'>Tên</th><th class='text-right'>Thao tác</th>"
            }) %>
        </div>
    </div>
    <%= erp_component('button/save', {text: 'LƯU THÔNG TIN'}) %><%= erp_component('button/cancel', {text: 'HỦY LƯU THÔNG TIN', href: erp_products.backend_accessories_path}) %>
<% end %>